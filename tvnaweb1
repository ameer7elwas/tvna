    <script>
        // تكوين Supabase
        const SUPABASE_URL = 'https://vpvvjascwgivdjyyhzwp.supabase.co';
        const SUPABASE_KEY = 'eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZSIsInJlZiI6InZwdnZqYXNjd2dpdmRqeXloendwIiwicm9sZSI6ImFub24iLCJpYXQiOjE3NDk4MDYxMjYsImV4cCI6MjA2NTM4MjEyNn0.6AR2-MG4x9ugNTXe9jUqx-IwGEtj1m6MCYwQkTsSbUQ';
        
        const supabase = supabase.createClient(SUPABASE_URL, SUPABASE_KEY);
        
        // عناصر DOM
        const authScreen = document.getElementById('auth-screen');
        const mainApp = document.getElementById('main-app');
        const loginBtn = document.getElementById('login-btn');
        const logoutBtn = document.getElementById('logout-btn');
        const registerLink = document.getElementById('register-link');
        const channelsContainer = document.getElementById('channels-container');
        const adsCarousel = document.getElementById('ads-carousel');
        const channelsCount = document.getElementById('channels-count');
        const viewsCount = document.getElementById('views-count');
        const usersCount = document.getElementById('users-count');
        
        // حالة المستخدم
        let currentUser = null;
        
        // تسجيل الدخول
        loginBtn.addEventListener('click', async () => {
            const username = document.getElementById('username').value;
            const password = document.getElementById('password').value;
            
            if (username && password) {
                try {
                    // تشفير كلمة المرور
                    const encoder = new TextEncoder();
                    const data = encoder.encode(password);
                    const passwordHash = btoa(String.fromCharCode(...new Uint8Array(data)));
                    
                    // استعلام Supabase
                    const { data: users, error } = await supabase
                        .from('users')
                        .select('*')
                        .eq('username', username)
                        .eq('password_hash', passwordHash)
                        .eq('is_active', true);
                    
                    if (error) throw error;
                    
                    if (users && users.length > 0) {
                        currentUser = users[0];
                        authScreen.style.display = 'none';
                        mainApp.style.display = 'block';
                        loadDashboardData();
                        loadChannels();
                        loadAds();
                    } else {
                        alert('بيانات الدخول غير صحيحة');
                    }
                } catch (error) {
                    console.error('Login error:', error);
                    alert('خطأ في الاتصال بالخادم');
                }
            } else {
                alert('يرجى ملء جميع الحقول');
            }
        });
        
        // تسجيل الخروج
        logoutBtn.addEventListener('click', () => {
            currentUser = null;
            mainApp.style.display = 'none';
            authScreen.style.display = 'flex';
        });
        
        // تحميل القنوات
        async function loadChannels() {
            try {
                const { data: channels, error } = await supabase
                    .from('channels')
                    .select('*')
                    .eq('is_active', true)
                    .order('order_index', { ascending: true });
                
                if (error) throw error;
                
                channelsContainer.innerHTML = '';
                
                channels.forEach(channel => {
                    const channelCard = `
                        <div class="card channel-card">
                            <img src="${channel.image_url}" alt="${channel.name}" class="channel-thumbnail">
                            <div class="play-btn">▶</div>
                            <div class="channel-info">
                                <h3 class="channel-name">${channel.name}</h3>
                                <span class="channel-category">${channel.category}</span>
                            </div>
                        </div>
                    `;
                    channelsContainer.innerHTML += channelCard;
                });
                
                // إضافة مستمعات الأحداث للقنوات
                document.querySelectorAll('.channel-card').forEach((card, index) => {
                    card.addEventListener('click', () => {
                        playChannel(channels[index]);
                    });
                });
                
            } catch (error) {
                console.error('Error loading channels:', error);
            }
        }
        
        // تحميل الإعلانات
        async function loadAds() {
            try {
                const now = new Date().toISOString();
                const { data: ads, error } = await supabase
                    .from('advertisements')
                    .select('*')
                    .eq('is_active', true)
                    .order('priority', { ascending: false });
                
                if (error) throw error;
                
                adsCarousel.innerHTML = '';
                
                ads.forEach(ad => {
                    const adSlide = `
                        <div class="ad-slide" style="background-image: url('${ad.image_url}')">
                            <div class="ad-overlay">
                                <h3>${ad.title}</h3>
                                <p>${ad.description}</p>
                            </div>
                        </div>
                    `;
                    adsCarousel.innerHTML += adSlide;
                });
                
                // بدء تشغيل الكاروسيل
                startCarousel();
                
            } catch (error) {
                console.error('Error loading ads:', error);
            }
        }
        
        // تشغيل الكاروسيل
        function startCarousel() {
            let currentIndex = 0;
            const slides = document.querySelectorAll('.ad-slide');
            const track = document.querySelector('.carousel-track');
            
            setInterval(() => {
                currentIndex = (currentIndex + 1) % slides.length;
                track.style.transform = `translateX(-${currentIndex * 100}%)`;
            }, 5000);
        }
        
        // تحميل بيانات لوحة التحكم
        async function loadDashboardData() {
            try {
                // إحصائيات القنوات
                const { count: channels, error: channelsError } = await supabase
                    .from('channels')
                    .select('*', { count: 'exact' })
                    .eq('is_active', true);
                
                if (!channelsError) channelsCount.textContent = channels;
                
                // إحصائيات المشاهدات
                const today = new Date();
                today.setHours(0, 0, 0, 0);
                
                const { count: views, error: viewsError } = await supabase
                    .from('view_stats')
                    .select('*', { count: 'exact' })
                    .gte('created_at', today.toISOString());
                
                if (!viewsError) viewsCount.textContent = views;
                
                // إحصائيات المستخدمين
                const { count: users, error: usersError } = await supabase
                    .from('users')
                    .select('*', { count: 'exact' })
                    .eq('is_active', true);
                
                if (!usersError) usersCount.textContent = users;
                
            } catch (error) {
                console.error('Error loading dashboard data:', error);
            }
        }
        
        // تشغيل القناة
        function playChannel(channel) {
            alert(`جاري تشغيل قناة ${channel.name}...`);
            // هنا سيتم تنفيذ تشغيل الفيديو باستخدام HLS.js أو أي مكتبة أخرى
        }
        
        // تسجيل حساب جديد
        registerLink.addEventListener('click', (e) => {
            e.preventDefault();
            const username = prompt('اسم المستخدم:');
            const email = prompt('البريد الإلكتروني:');
            const password = prompt('كلمة المرور:');
            
            if (username && email && password) {
                // تنفيذ عملية التسجيل هنا
                alert('تم إنشاء الحساب بنجاح! يمكنك الآن تسجيل الدخول');
            }
        });
    </script>
